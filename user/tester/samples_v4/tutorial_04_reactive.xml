<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="4">
  <BehaviorTree ID="MoveReactive">
    <ReactiveSequence _description="If the 2nd child returns RUNNING,&#10;the ReactiveSequence restarts from the 1st child.">
      <CheckBattery _description="This will be called periodically and may halt MoveBase"/>
      <Sequence>
        <SaySomething message="mission started"/>
        <MoveBase goal="1;2;0.5"/>
        <SaySomething message="mission started"/>
      </Sequence>
    </ReactiveSequence>
  </BehaviorTree>

  <BehaviorTree ID="MoveSimple">
    <Sequence>
      <CheckBattery _description="This is called only once, before starting MoveBase"/>
      <SaySomething message="mission started"
                    _description="ewrewr"
                    _skipIf="re"
                    _successIf="e"
                    _failureIf="e"
                    _while="e"
                    _onSuccess="er"
                    _onFailure="ewr"
                    _onHalted="ewr"
                    _post="rew"/>
      <MoveBase goal="1;2;0.5"/>
      <SaySomething message="mission completed"
                    _description="et"
                    _skipIf="erd"
                    _successIf="er"
                    _failureIf="ewr"
                    _while="ewr"
                    _onSuccess="rewr"
                    _onFailure="ret"
                    _onHalted="ret"
                    _post="ert"/>
    </Sequence>
  </BehaviorTree>

  <!-- Description of Node Models (used by Groot) -->
  <TreeNodesModel>
    <Condition ID="CheckBattery"
               editable="true"/>
    <Action ID="MoveBase"
            editable="true">
      <input_port name="goal"/>
    </Action>
    <Action ID="SaySomething"
            editable="true">
      <input_port name="message"/>
    </Action>
  </TreeNodesModel>

</root>
